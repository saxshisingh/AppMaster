@page
@model PingaUnitBooking.UI.Pages.Scheme.SchemeModel
@{
    Layout = "~/Pages/Shared/_layout.cshtml";
    ViewBag.Scheme = (ViewBag.ActivePage == "Scheme") ? "active" : "active";
}
<div id="empLoader" class="loader-container">
    <span class="loader"></span>
</div>
<body class="hold-transition sidebar-mini ">
    <div class="row" style="padding-top: 51px;">
        <div class="col-md-12 mt-2 " style="position:sticky">
            <nav class="navbar navbar-expand-sm " style="background-color: #36454F; position: sticky; top: 160px; border-radius: 10px ;width:100%;height:45px">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" style="color:white; font-family:Tahoma">Scheme List -</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto ">
                    <li class="nav-item ">
                        <button type="button" id="btnDocEdit" data-toggle="modal" href="" data-backdrop="static" data-keyboard="false" data-target="#addScheme" class="btn btn-primary" onclick="ClearData()" style="float:right ">Add Scheme </button>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    @* USER LIST DATATABLE*@

    <section class="content mt-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body" id="divSchemeList">
                            @*  Table bind here*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @* ------------ADD Project  MODEL----------------*@

    <div class="modal fade" id="addScheme" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-md" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #36454F">
                    <h5 id="planLabel" style="color:white;color:white">Add Scheme</h5>
                    <button style="color:white" type="button" class="close" data-dismiss="modal" tabindex="-1" aria-label="Close">
                        <i class="fa fa-close"></i>
                    </button>
                </div>

                <div class="row">
                    <div class="col-12 col-sm-12">
                        <div class="card card-primary card-tabs">
                            <div class="card-body">
                                <div class="tab-content" id="custom-tabs-one-tabContent">

                                    @* ------------BASIC INFORMATION TAB----------------*@
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <div class="mr-8 w-100" style="display:inline-grid">
                                                    <span>Scheme Name<em style="color:red">*</em></span>
                                                    <input class="form-control" id="txtSchemeName" style="width: 100%;" placeholder="Enter scheme name" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-8">
                                            <div class="form-group">
                                                <div class="mr-8 w-100" style="display:inline-grid">
                                                    <span>Scheme Desc</span>
                                                    <input class="form-control" id="txtSchemeDesc" style="width: 100%;" placeholder="Enter desc" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                  
                                </div>
                            </div>
                            <div class="card-footer">
                                <hidden id="hdnSchemeID"></hidden>
                                <button type="button" onclick="addScheme()" id="btnAddScheme" class="btn btn-primary">Save</button>
                            </div>
                            <!-- /.card -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {

        <script src="~/js/Scheme.js"></script>
    }
</body>