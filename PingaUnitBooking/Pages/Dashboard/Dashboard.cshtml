@page 
@model PingaUnitBooking.UI.Pages.Dashboard.DashboardModel
@{
    Layout = "~/Pages/Shared/_layout.cshtml";
    ViewBag.DashboardActive = (ViewBag.ActivePage == "Dashboard") ? "active" : "active";

}
<div id="eLoader" class="loader-container">
    <span class="loader"></span>
</div>
<body>
    <span id="sessionRoleValue">@ViewData["RoleName"]</span>
 <div class="home-content">

    <div class="overview-boxes">
        <div class="box">
            <div class="right-side">
                <div class="box-topic">Total Unit</div>
                <div class="number" id="totalUnit">0</div>
                <div class="indicator">
                    <i class='bx bx-up-arrow-alt'></i>
                    <span class="text">Up from yesterday</span>
                </div>
            </div>
            <i class='bx bx-cart-alt cart'></i>
        </div>
           
        <div class="box">
            <div class="right-side">
                <div class="box-topic">Sold Unit</div>
                <div class="number" id="soldUnit">0</div>
                <div class="indicator">
                    <i class='bx bx-up-arrow-alt'></i>
                    <span class="text">Up from yesterday</span>
                </div>
            </div>
            <i class='bx bxs-cart-add cart two'></i>
        </div>
            <div class="box">
                <div class="right-side">
                    <div class="box-topic">Unsold Unit</div>
                    <div class="number" id="unSoldUnit">0</div>
                    <div class="indicator">
                        <i class='bx bx-down-arrow-alt down'></i>
                        <span class="text">Down from today</span>
                    </div>
                </div>
                <i class='bx bxs-cart-download cart four'></i>
            </div>
        <div class="box">
            <div class="right-side">
                <div class="box-topic">Progress Unit</div>
                <div class="number" id="progressUnit">0</div>
                <div class="indicator">
                    <i class='bx bx-up-arrow-alt'></i>
                    <span class="text">Up from yesterday</span>
                </div>
            </div>
            <i class='bx bx-cart cart three'></i>
        </div>
        
    </div>

   <div class="sales-boxes">
        <div class="recent-sales box">
            <div class="title">Monthly Sales</div>
            <div class="sales-details">


                    <div class="container">
                        <div class="row my-2">
                            <div class="col-md-12 py-1">
                                <div class="card">
                                    <div class="card-body">
                                        @*   <canvas id="chLine"></canvas>*@
                                     <canvas id="myChart" style="width:100%;max-width:600px"></canvas>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
            </div>

        </div>
        <div class="top-sales box">
            <div class="title">Month Wise Sold Unit Amount</div>
                <div class="col-md-12 py-1">
                    <div class="card">
                        <div class="card-body">
                        <canvas id="myBarChart" style="width:100%;max-width:600px"></canvas>
                        </div>
                    </div>
                </div>
        </div>
    </div>

        <div class="sales-boxes mt-4" style="justify-content:center">
            <div class="recent-sales box" style="width:100%">
                <div class="title">Unit Approval Alert Action Required</div>
                <div class="sales-details">
                    <div class="container">
                        <div class="row my-2">
                            <div class="col-md-12 py-6">

                              <div  id="divSaleProgress">
                                   
                                </div>
                            </div>

                        </div>

                    </div>
                </div>

            </div>

        </div>


    </div>

    @* ------------SEND MAIL MODEL----------------*@

    <div class="modal fade" id="sendMailModal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-md" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #36454F">
                    <h5  style="color:white;color:white"><label >Send Mail</label></h5>
                    <button style="color:white" type="button" class="close" data-dismiss="modal" tabindex="-1" aria-label="Close">
                        <i class="fa fa-close"></i>
                    </button>
                </div>
                <div class="row">
                    <div class="col-12 col-sm-12">
                        <div class="card card-primary card-tabs">
                            <div class="card-body">
                                <div class="tab-content" id="custom-tabs-one-tabContent">
                                    <div class="row">
                                        <input hidden id="lblMailConfigureID"/>
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>To Email <em style="color:red">*</em></label>
                                                <input disabled type="text" id="userEmail" class="form-control" placeholder="Enter mail id" />
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>Subject <em style="color:red">*</em></label>
                                                <input type="text" id="subject" class="form-control" value="Alert from SS-GROUP Administrator" placeholder="Enter Subject" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>Message<em style="color:red">*</em></label>
                                                <textarea id="txtMessage" style="width:100%"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card -->
                            <div class="card-footer">
                                <button type="button" onclick="SendTestConfigure()" id="btnTestConfigure" class="btn btn-primary pull-right">Send</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {

                 <script src="~/js/Dashboard.js"></script>
                     <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>




}



</body>